<!-- .row title -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Remedio</h1>
        
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- .row body -->
<div class="row" ng-app="remedioApp" ng-controller="remedioCtrl">
    <div class="row" style="margin-bottom:5px;">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" ng-click="new()" data-toggle="modal" data-target="#edit_remedio"><i class="fa fa-plus" ></i> New</button>
        </div>
        <!-- /.col-lg-2 -->
        <div class="col-md-7">
            
        </div>
        <!-- /.col-lg-8 -->
        <div class="col-md-3" style="text-align:right">
        
            
        </div>
        <!-- /.col-lg-2 -->
    </div>    
    <!-- /.row -->
   
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product list

                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example" datatable dt-options="dtOptions"  dt-columns="dtColumns" dt-instance="dtInstance" >
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Lote</th>
                                    <th>Validade</th>
                                    <th>Fabricante</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->

        <!-- edit_remedio Modal -->
        <div class="modal fade" id="edit_remedio" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">New/Edit Remedio</h4>
                    </div>
                    <div class="modal-body">
                        <form id="orderform" role="form" action="/orders/new" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                 <div class="panel-body">
                                        <div class="row">
                                            <input type="hidden" id="remedio_id" name="remedio_id" ng-model="remedio.id">
                                            
                                            <div class="form-group">
                                                <label>Lote</label>
                                                <input class="form-control" placeholder="Lote" id="remedio_lote" name="remedio_lote" ng-model="remedio.lote">
                                                <p class="help-block">Remedio's Lote</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Validade</label>
                                                <input class="form-control" placeholder="Validade" id="remedio_validade" name="remedio_validade" ng-model="remedio.validade">
                                                <p class="help-block">Remedio's Validade</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Fabricante</label>
                                                <input class="form-control" placeholder="Fabricante" id="remedio_fabricante" name="remedio_fabricante" ng-model="remedio.fabricante">
                                                <p class="help-block">Remedio's Fabricante</p>
                                            </div>
                                        </div>
                                        <!-- /.row (nested) -->
                                    </div>
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        </form>
                        <div class="row">
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="saveButton" ng-click="save()" data-dismiss="modal">Submit</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>

</div>